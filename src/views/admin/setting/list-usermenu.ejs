<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-list-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">List Menu</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-submenu-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Tambah Menu</a>
    </li>
</ul>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-list-tab">
        <div class="table-responsive">
            <table class="table table-menu">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Menu</th>
                        <th>Link</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% usermenu.forEach((menu, i)=> { %>
                        <tr>
                            <td>
                                <%= i + 1 %>
                            </td>
                            <td>
                                <%= menu.submenus.sub %>
                            </td>
                            <td>
                                <%= menu.submenus.link %>
                            </td>
                            <td>
                                <button title="Delete" class="btn btn-sm btn-outline-danger delete-akses-menu" data-id="<%= menu.id %>">Delete</button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- data semua menu -->
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-submenu-tab">
        <div class="table-responsive">
            <table class="table table-menu" id="table-menu">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Menu</th>
                        <th>Link</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% submenus.forEach((menu, i)=> { %>
                        <% const checked=menu.usermenus.length>0 ? 'checked disabled' : '' %>
                            <tr>
                                <td>
                                    <%= i + 1 %>
                                </td>
                                <td>
                                    <%= menu.sub %>
                                </td>
                                <td>
                                    <%= menu.link %>
                                </td>
                                <td>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input aktifkan" id="check<%= i %>" <%=checked %> data-sub_id="<%= menu.id %>">
                                        <label class="custom-control-label" for="check<%= i %>"></label>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>