<aside class="sidebar-left border-right bg-white shadow" id="leftSidebar" data-simplebar>
	<a href="#" class="btn collapseSidebar toggle-btn d-lg-none text-muted ml-2 mt-3" data-toggle="toggle">
		<i class="fe fe-x"><span class="sr-only"></span></i>
	</a>
	<nav class="vertnav navbar navbar-light">
		<!-- nav bar -->
		<div class="w-100 mb-4 d-flex">
			<a class="navbar-brand mx-auto mt-2 flex-fill text-center" href="/dashboard">
				<img src="/assets/images/logo.png" style="height: 50px;" />
			</a>
		</div>
		<p class="text-muted nav-heading mt-2 mb-1">
			<span>Menu</span>
		</p>

		<% sidebar.forEach((menus, i)=> { %>
			<% if (menus.link=='#' ) { %>

				<ul class="navbar-nav flex-fill w-100 mb-2">

					<li class="nav-item dropdown">
						<a href="#ui-<%= menus.id %>" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">
							<i class="<%= menus.icon %>"></i>
							<span class="ml-3 item-text">
								<%= menus.main %>
							</span>
						</a>

						<ul class="collapse list-unstyled pl-4 w-100" id="ui-<%= menus.id %>">
							<% menus.submenus.forEach((submenu, j)=> { %>
								<li class="nav-item">
									<a class="nav-link pl-3" href="/<%= submenu.link %>"><span class="ml-1 item-text">
											<%= submenu.sub %>
										</span>
									</a>
								</li>
								<% }) %>
						</ul>
					</li>
				</ul>

				<% } else { %>
					<ul class="navbar-nav flex-fill w-100 mb-2">

						<li class="nav-item w-100">
							<a class="nav-link" href="/<%= menus.link %>">
								<i class="<%= menus.icon %>"></i>
								<span class="ml-3 item-text">
									<%= menus.main %>
								</span>
							</a>
						</li>
					</ul>
					<% } %>

						<% }) %>

	</nav>
</aside>